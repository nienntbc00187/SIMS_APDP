@page "/departments"

@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using BlazorApp3.Models
@inject IDbContextFactory<BlazorApp3.Data.ApplicationDbContext> DbFactory
@using Microsoft.AspNetCore.Authorization


<PageTitle>Index</PageTitle>

<h1 class="my-4">List of Departments</h1>

<div class="d-flex justify-content-end mb-3">
    <a href="departments/create" class="btn btn-primary">
        <i class="fa-solid fa-square-plus"></i> Add Department
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Department Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in DbFactory.CreateDbContext().Departments)
            {
                <tr>
                    <td>@department.Name</td>
                    <td>
                            <a href="@($"departments/edit?id={department.Id}")" class="btn btn-warning btn-sm" title="Edit">
                                <i class="fa-solid fa-pen-to-square"></i> Edit
                            </a>
                            <a href="@($"departments/details?id={department.Id}")" class="btn btn-info btn-sm" title="View">
                                <i class="fa-solid fa-circle-info"></i> View
                            </a>
                            <a href="@($"departments/delete?id={department.Id}")" class="btn btn-danger btn-sm" title="Delete">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

